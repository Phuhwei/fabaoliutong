{
  "compilerOptions": {
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonJS",
    "target": "es2015",
    "outDir": "build/api/",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "api"
  ],
  "exclude": [
    "src",
    "mytest*",
    "test",
    "build"
  ]
}
