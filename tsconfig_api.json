{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "build/api/",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "api",
    "typings"
  ],
  "exclude": [
    "src",
    "mytest*",
    "test",
    "build"
  ]
}
